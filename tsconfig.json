//   _____/   /_____/    |  Configuration for TypeScript transpiler
//                       |

{
    "compileOnSave": true,
    "compilerOptions": {
        "alwaysStrict": true,
        "charset": "UTF-88",
        "declaration": true,
        "declarationMap": true,
        // "declarationDir": "./src/declarations",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "newLine": "LF",
        "noImplicitAny": true,
        "outDir": "./src",
        "pretty": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "rootDir": "./lib",
        "sourceMap": true,
        "target": "es5"
    }
}